# =============================================================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control

# =============================================================================
# NODE ENVIRONMENT
# =============================================================================
NODE_ENV=development

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/n8n_dev?schema=public

# =============================================================================
# AUTHENTICATION (Better Auth)
# =============================================================================
# Generate a secure secret with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-super-secret-key-min-32-chars-change-this-in-production
BETTER_AUTH_URL=http://localhost:3000

# Application name
NEXT_PUBLIC_APP_NAME=Nodebase

# =============================================================================
# ENCRYPTION
# =============================================================================
# Generate a secure encryption key with: openssl rand -base64 32
# Used for encrypting sensitive data (credentials, secrets, etc.)
ENCRYPTION_KEY=your-encryption-key-min-32-chars-change-this-in-production

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# =============================================================================
# INNGEST (Background Jobs)
# =============================================================================
# Get your keys from: https://www.inngest.com/
INNGEST_EVENT_KEY=your-inngest-event-key
INNGEST_SIGNING_KEY=your-inngest-signing-key

# =============================================================================
# AI / LLM PROVIDERS
# =============================================================================
# Google Generative AI (Gemini)
GOOGLE_GENERATIVE_AI_API_KEY=your-google-ai-api-key

# =============================================================================
# MONITORING & ERROR TRACKING
# =============================================================================
# Sentry for error tracking
# Get from: https://sentry.io/
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# =============================================================================
# LOGGING
# =============================================================================
# Options: trace, debug, info, warn, error, fatal
LOG_LEVEL=info

# =============================================================================
# RATE LIMITING (Optional)
# =============================================================================
# Upstash Redis for rate limiting
# Get from: https://upstash.com/
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_ANALYTICS=false

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Rate limiting configuration
API_RATE_LIMIT_MAX=100
API_RATE_LIMIT_WINDOW=15m

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Uncomment for bundle analysis
# ANALYZE=true

# Uncomment for database debugging
# DEBUG=prisma:query
