{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/api/*": [
        "./src/core/api/*"
      ],
      "@/features/*": [
        "./src/features/*"
      ],
      "@/shared/*": [
        "./src/shared/*"
      ],
      "@/core/*": [
        "./src/core/*"
      ],
      "@/app/*": [
        "./src/app/*"
      ],
      "@/components/*": [
        "./src/shared/components/*"
      ],
      "@/hooks/*": [
        "./src/shared/ui/hooks/*"
      ],
      "@/scripts/*": [
        "./src/scripts/*"
      ],
      "@/lib": [
        "./src/shared/lib"
      ],
      "@/lib/db": [
        "./src/shared/infrastructure/database/db.ts"
      ],
      "@/lib/auth": [
        "./src/core/auth/auth.ts"
      ],
      "@/lib/auth-client": [
        "./src/core/auth/auth-client.ts"
      ],
      "@/lib/audit": [
        "./src/shared/application/services/audit.ts"
      ],
      "@/lib/logger": [
        "./src/shared/infrastructure/logger/pino.logger.ts"
      ],
      "@/lib/encryption": [
        "./src/shared/infrastructure/encryption.ts"
      ],
      "@/lib/rate-limit": [
        "./src/core/api/rate-limit.ts"
      ],
      "@/lib/polar": [
        "./src/shared/application/services/polar.ts"
      ],
      "@/lib/credentials": [
        "./src/shared/application/services/credentials.ts"
      ],
      "@/lib/*": [
        "./src/shared/infrastructure/*",
        "./src/shared/ui/utils/*",
        "./src/core/auth/*",
        "./src/core/api/*",
        "./src/shared/application/services/*",
        "./src/shared/lib/*"
      ],
      "@/actions/*": [
        "./src/core/auth/*"
      ],
      "@/config/*": [
        "./src/core/config/*"
      ],
      "@/inngest/*": [
        "src/core/inngest/*"
      ],
      "@/trpc/*": [
        "src/core/api/trpc/*"
      ],
      "@/types/*": [
        "./src/core/types/*"
      ],
      "@/prisma/*": [
        "./prisma/*"
      ],
      "@/tests/*": [
        "./tests/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    ".next/dev/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
